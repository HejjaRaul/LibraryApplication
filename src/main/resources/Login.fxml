<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.atlassian.libraryapp1.Controllers.LoginController">
    <children>
        <Button fx:id="loginButton" layoutX="72.0" layoutY="215.0" mnemonicParsing="false" onAction="#handleLoginAction"
                onMouseClicked="#handleLoginAction" prefHeight="40.0" prefWidth="149.0" text="Login"
                textAlignment="CENTER"/>
        <Button fx:id="registerButton" layoutX="380.0" layoutY="215.0" mnemonicParsing="false"
                onAction="#handleRegisterAction" prefHeight="40.0" prefWidth="149.0" text="Register here"/>
        <Button fx:id="cancelButton" alignment="CENTER" contentDisplay="CENTER" layoutX="263.0" layoutY="302.0"
                mnemonicParsing="false" onAction="#handleCancelAction" prefHeight="25.0" prefWidth="68.0"
                text="Exit"/>
        <TextField fx:id="usernameField" layoutX="222.0" layoutY="93.0" prefHeight="25.0" prefWidth="158.0"
                   promptText="username"/>
        <Label fx:id="usernameLabel" layoutX="72.0" layoutY="97.0" text="Username:"/>
        <Label fx:id="passwordLabel" layoutX="72.0" layoutY="133.0" text="Password:"/>
        <Label fx:id="titleLabel" layoutX="222.0" layoutY="67.0" text="Library Application"/>
        <PasswordField fx:id="passwordField" layoutX="222.0" layoutY="129.0" prefHeight="25.0" prefWidth="158.0"
                       promptText="password"/>
        <Label layoutX="72.0" layoutY="167.0" text="Role"/>
        <ChoiceBox fx:id="role" layoutX="221.0" layoutY="163.0" prefHeight="25.0" prefWidth="158.0"/>

        <Text fx:id="loginMessage" layoutX="71.0" layoutY="282.0" text=" "/>
    </children>
</AnchorPane>
