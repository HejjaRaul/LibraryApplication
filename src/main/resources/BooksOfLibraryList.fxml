<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="415.0" prefWidth="523.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.atlassian.libraryapp1.Controllers.BooksOfLibraryListController">
    <children>
        <ListView fx:id="bookList" layoutX="14.0" layoutY="49.0" prefHeight="335.0" prefWidth="200.0"/>
        <Label alignment="CENTER" prefHeight="49.0" prefWidth="523.0" text="Book list">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
        <Label layoutX="306.0" layoutY="49.0" prefHeight="20.0" prefWidth="149.0" text="Write a book's name:">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="bookName" layoutX="306.0" layoutY="77.0"/>
        <Hyperlink fx:id="libraryList" layoutY="390.0" onAction="#handleGoBackToLibraryList" text="&lt;Go Back"/>
        <Button layoutX="223.0" layoutY="115.0" mnemonicParsing="false" onAction="#handleShowInformationOfBook"
                prefHeight="39.0" prefWidth="141.0" text="Show information &#10;about the book&#10;"/>
        <Text fx:id="authorMessage" layoutX="224.0" layoutY="175.0" strokeType="OUTSIDE" strokeWidth="0.0"
              wrappingWidth="297.0"/>
        <Text fx:id="genreMessage" layoutX="224.0" layoutY="190.0" strokeType="OUTSIDE" strokeWidth="0.0"
              wrappingWidth="297.0"/>
        <Text fx:id="errorMessage" layoutX="224.0" layoutY="175.0" strokeType="OUTSIDE" strokeWidth="0.0"
              wrappingWidth="297.0"/>
        <Button layoutX="380.0" layoutY="115.0" mnemonicParsing="false" onAction="#handleBorrowBook" prefHeight="39.0"
                prefWidth="141.0" text="Borrow the book"/>
    </children>
</AnchorPane>
