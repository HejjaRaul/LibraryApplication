<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="net.atlassian.libraryapp1.Controllers.NotReturnedBooksController">
    <children>
        <ListView fx:id="notReturnedBooksList" layoutX="44.0" layoutY="65.0" prefHeight="217.0" prefWidth="228.0"/>
        <Hyperlink layoutY="427.0" onAction="#goBackToLibrarianView" text="&lt;Go Back"/>
        <Label layoutX="68.0" layoutY="27.0" text="The books that were not returned:"/>
        <Text fx:id="notReturnedBookMessage" layoutX="44.0" layoutY="316.0" wrappingWidth="228.0"
              GridPane.columnIndex="1" GridPane.rowIndex="8"/>
        <ListView fx:id="peopleWhoBorrowedBooksList" layoutX="306.0" layoutY="68.0" prefHeight="217.0"
                  prefWidth="228.0"/>
        <Label layoutX="321.0" layoutY="27.0" text="The person who borrowed the book"/>
        <Label layoutX="306.0" layoutY="301.0" prefHeight="20.0" prefWidth="149.0" text="Write a book's name:">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="bookName" layoutX="306.0" layoutY="330.0"/>
        <Button fx:id="bookReturned" layoutX="306.0" layoutY="367.0" mnemonicParsing="false"
                onAction="#handleTheBookHasBeenReturned" prefHeight="41.0" prefWidth="149.0"
                text="The book has&#10;been returned&#10;"/>
        <Text fx:id="returnBookMessage" layoutX="306.0" layoutY="432.0" strokeType="OUTSIDE" strokeWidth="0.0"/>
    </children>
</AnchorPane>
