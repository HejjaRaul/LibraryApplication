<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="400" prefWidth="600" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="net.atlassian.libraryapp1.Controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
    <Text id="title-text" text="FIS - LibraryApplication" GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.rowIndex="0"/>

    <Label text="Username:" GridPane.rowIndex="1"/>

    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Full Name/Library Name:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <ChoiceBox fx:id="role" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
    </ChoiceBox>

    <Hyperlink onAction="#goBackToLogIn" text="Already have an account? Sign in" GridPane.columnIndex="0"
               GridPane.rowIndex="7"/>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button onAction="#handleRegisterAction" text="Register"/>
    </HBox>

    <Text fx:id="registrationMessage" GridPane.columnIndex="1" GridPane.rowIndex="8"/>


    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
